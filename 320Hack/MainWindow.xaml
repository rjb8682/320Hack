<Window x:Class="_320Hack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="712.091" Width="1050"
        WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" KeyDown="keyPressed" Closed="isClosed">
    <Grid Background="#FF595D72">
        <TextBox x:Name="textEntry" Margin="34,603,34,10" TextWrapping="Wrap" FontSize="16" Background="#FFCECFDA" Foreground="#FF131313" BorderBrush="Black" BorderThickness="2" KeyDown="textEntered" Cursor="IBeam"/>
        <Label Content="Console" HorizontalAlignment="Left" Margin="34,571,0,0" VerticalAlignment="Top" Width="122" FontSize="18" Height="32"/>
        <TextBlock x:Name="gameArea" Margin="34,13,34,0" VerticalAlignment="Top" Height="424" Background="Black" FontSize="20" IsEnabled="False" FontFamily="MS Mincho" Foreground="#FFB8B8B8" Padding="200,10,0,0" TextOptions.TextHintingMode="Fixed" Focusable="True"/>
        <TextBox x:Name="outputPanel" Margin="34,442,34,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="124" FontSize="16" Background="Black" Foreground="#FFE6E6E6" BorderBrush="Black" BorderThickness="2" KeyDown="textEntered" Cursor="Arrow" IsEnabled="False"/>

    </Grid>
</Window>
