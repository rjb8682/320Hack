<Window x:Class="_320Hack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="700" Width="1050"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Rectangle Fill="#FF8D8D8D" HorizontalAlignment="Left" Height="672" Margin="829,0,0,-2" Stroke="Black" VerticalAlignment="Top" Width="213"/>

        <Button Content="Inventory" HorizontalAlignment="Left" Margin="878,57,0,0" VerticalAlignment="Top" Width="114" Height="36" FontSize="16"/>
        <TextBox x:Name="gameArea" HorizontalAlignment="Left" Height="450" Margin="14,24,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="800" BorderThickness="1" ToolTip="Game Area" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="Controls:" HorizontalAlignment="Left" Margin="14,479,0,0" VerticalAlignment="Top" Height="35" Width="95" FontSize="20"/>
        <TextBlock HorizontalAlignment="Left" Margin="14,519,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="141" Width="800" FontSize="16"><Run Text="W/A/S/D - Movement"/><LineBreak/><Run Text=""/></TextBlock>
        <Button Content="Gear" HorizontalAlignment="Left" Margin="878,112,0,0" VerticalAlignment="Top" Width="114" Height="36" FontSize="16"/>
        <Label Content="Actions" HorizontalAlignment="Left" Margin="888,0,0,0" VerticalAlignment="Top" Width="95" FontSize="18" HorizontalContentAlignment="Center"/>
        <Separator HorizontalAlignment="Left" Height="51" Margin="835,7,0,0" VerticalAlignment="Top" Width="203" Background="Black" Opacity="0.3"/>

    </Grid>
</Window>
