<Window x:Class="AsciiLevelEditor.FileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FileDialog" Height="135" Width="320" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="70*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" VerticalAlignment="Center" Content="Enter a filename: "/>
        <Grid Grid.Row="1" Margin="0 20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="fileInput" Grid.Column="0" Margin="10 0" KeyDown="keyPressedInputBox"></TextBox>
            <Button Grid.Column="1" Content="OK" Margin="0 0 10 0" Click="sendFileName"></Button>
        </Grid>
    </Grid>
</Window>
